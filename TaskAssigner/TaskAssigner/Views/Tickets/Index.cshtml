@model IEnumerable<TaskAssigner.Models.Ticket>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            #
        </th>
        <th>
            Description
        </th>
        <th>Tags</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.TicketId.ToString()
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @String.Join(", ", @item.Tags.Select(t => t.Name).ToArray())  
        </td>
        @*<td>
            @Html.ActionLink("Delete", "Delete", new { id=item.TicketId })
        </td>*@
    </tr>
}

</table>
